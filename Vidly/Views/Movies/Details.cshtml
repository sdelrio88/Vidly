@model Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date: @Model.ReleasedDate.Value.ToShortDateString()</li>
    <li>Date Added: @Model.DateAdded.Value.ToShortDateString()</li>
    <li>Number In Stock: @Model.NumberInStock</li>
</ul>